                            <li><a href="~/Home/rueckruf">Rückruf</a></li>
                            <li><a href="#">Gewinnspiel</a></li>
                            @*<li role="separator" class="divider"></li>
                                <li><a href="#">Impressum</a></li>
                                <li>
                                    <a href="#">
                                        <img src="~/Content/images/icons/agb_icon.png" class="dropicon" /> AGB
                                    </a>
                                </li>*@
                        </ul>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="~/Login/"><img src="~/Content/images/icons/login_icon.png" class="navicon" />     Login</a></li>

                </ul>
            </div>
            @*</div>*@
            <!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>
    <div class="container">
        @RenderBody()
        <hr />
    </div>
   
    <footer class="row">
        <div class="col-lg-4">AGB</div>
        <div class="col-lg-4">&copy; @DateTime.Now.Year - Thor IndusTries</div>
        <div class="col-lg-4">Impressum</div>
    </footer>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
