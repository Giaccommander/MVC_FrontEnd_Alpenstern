
@{
    ViewBag.Title = "Index";
}

<h2>App Download</h2>



<div class="AppStoreButtons hidden-xs">
    <a href="https://www.apple.com/de/itunes/download/" class="btn btn-default btn-lg active" role="button">
        <img src="~/Content/themes/base/images/appstore.png" />
    </a>
    <br /><br />
    <a href="https://play.google.com/store/apps?hl=de" class="btn btn-default btn-lg active" role="button">
        <img src="~/Content/themes/base/images/Androidstore.png" />
    </a>
</div>

<div class="MobileAppStoreButtons visible-xs">
    <a href="https://www.apple.com/de/itunes/download/" class="btn btn-default btn-md active" role="button">
        <img src="~/Content/themes/base/images/appstore.png" />
    </a>
    <a href="https://play.google.com/store/apps?hl=de" class="btn btn-default btn-md active" role="button">
        <img src="~/Content/themes/base/images/Androidstore.png" />
    </a>
</div>

<div class="containerHandy hidden-xs">
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="3000">
        <!-- Carousel indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <!-- Wrapper for carousel items -->
        <div class="carousel-inner">
            <div class="item active">
                <img class="d-block img-fluid" src="~/Content/themes/base/images/layout.png" alt="First slide" />
            </div>
            <div class="item">
                <img class="d-block img-fluid" src="~/Content/themes/base/images/app1.png" alt="Second slide" />
            </div>
            <div class="item">
                <img class="d-block img-fluid" src="~/Content/themes/base/images/app2.png" />
            </div>
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control left" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
        </a>
        <a class="carousel-control right" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
        </a>
    </div>
</div>

